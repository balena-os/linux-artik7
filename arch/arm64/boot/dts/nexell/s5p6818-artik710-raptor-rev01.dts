/dts-v1/;
#include "s5p6818-artik710-raptor-common.dtsi"
/ {
	soc {
		pinctrl@C0010000 {
			key_up:key_up {
				nexell,pins = "gpioa-26";
				nexell,pin-function = <0>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};

			key_down:key_down {
				nexell,pins = "gpioa-27";
				nexell,pin-function = <0>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};

			key_back:key_back {
				nexell,pins = "gpioa-25";
				nexell,pin-function = <0>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};

			key_home:key_home {
				nexell,pins = "alive-1";
				nexell,pin-function = <0>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};

			key_menu:key_menu {
				nexell,pins = "gpioa-0";
				nexell,pin-function = <0>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};

			touchpanel_irq: touchpanel-irq {
				nexell,pins = "gpiob-22";
				nexell,pin-function = <1>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};
		};
	};	/*** soc ***/
};

&i2c_2 {
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	nxe2000@32 {
		compatible = "nexell,nxe2000";
		reg = <0x32>;
		interrupt-parent = <&alive_0>;
		interrupts = <0x5 IRQ_TYPE_EDGE_FALLING>;
		pinctrl-names = "default";
		pinctrl-0 = <&pmic_irq>;
	};

	touchscreen@4a {
		status = "disabled";
	};
};

&i2c_gpio3 {
	compatible = "i2c-gpio";
	gpios = <&gpio_c 16 0	/* sda */
		&gpio_c 15 0	/* scl */
		>;
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	touchscreen@4a {
		compatible = "atmel,maxtouch";
		reg = <0x4a>;
		interrupt-parent = <&gpio_b>;
		interrupts = <22 IRQ_TYPE_EDGE_FALLING>;
		pinctrl-names = "default";
		pinctrl-0 = <&touchpanel_irq>;
		skip-cfg-load;
		switch-xy;
	};
};

&i2c_gpio5 {
	rtc@68 {
		compatible = "ti,bq32000";
		trickle-resistor-ohms = <1120>;
		reg = <0x68>;
		/* If it's first boot, reset to 4/29/2016(Fri) UTC */
		init_time,year = <116>;
		init_time,mon = <3>;
		init_time,mday = <29>;
		init_time,wday = <5>;
	};
};

&i2c_gpio10 {
	status = "disabled";
};

&i2c_gpio11 {
	status = "disabled";
};

&panel {
	enable-gpios = <&gpio_c 17 0>;
};

&gpio_key {
	pinctrl-names = "default";
	pinctrl-0 = <&key_up &key_down &key_back
			&key_pwr &key_home &key_menu>;
	up {
		label = "Up";
		gpios = <&gpio_a 26 1>;
		linux,code = <KEY_UP>;
	};
	down {
		label = "Down";
		gpios = <&gpio_a 27 1>;
		linux,code = <KEY_DOWN>;
	};

	back {
		label = "Back";
		gpios = <&gpio_a 25 1>;
		linux,code = <KEY_BACK>;
	};

	home {
		label = "Home";
		gpios = <&alive_0 1 1>;
		linux,code = <KEY_HOME>;
	};

	menu {
		label = "Menu";
		gpios = <&gpio_a 0 1>;
		linux,code = <KEY_MENU>;
	};
};
